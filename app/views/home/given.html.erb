<h1>Gifts Given</h1>

<div class = "form">
  <form action="/given" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <div>
      <input type="text" id = "gift-input" name="gift" placeholder="Gift Item" />
      <input type="text" id = "to-input" name="to" placeholder="Gift For"/>
      <input type="text" id = "occasion-input" name="occasion" placeholder="Occasion"/>
      <input type="text" id = "year-input" name="year" placeholder="Year"/>
      <input type="submit" />
    </div>
  </form>
</div>

